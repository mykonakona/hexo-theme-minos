<% if (!has_config('comment.repo') || !has_config('comment.repo_id') || !has_config('comment.catogory') ||
		!has_config('comment.catogory_id')) { %>
<div class="notification is-danger">
	You forgot to set the <code>repo</code>, <code>repo_id</code>, <code>catogory</code>, or <code>catogory_id</code> for giscus.
	Please set it in <code>_config.yml</code>.
</div>
<% } else { %>
<script src="https://giscus.app/client.js"
        data-repo="<%= get_config('comment.repo') %>",
        data-repo-id="<%= get_config('comment.repo_id') %>"
        data-category="<%= get_config('comment.catogory') %>"
        data-category-id="<%= get_config('comment.catogory_id') %>"
        data-mapping="url"
        data-strict="0"
        data-reactions-enabled="1"
        data-emit-metadata="0"
        data-input-position="top"
        data-theme="preferred_color_scheme"
        data-lang="zh-CN"
        data-loading="lazy"
        crossorigin="anonymous"
        async>
</script>
<% } %>